generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL") // Ganti dengan URL MongoDB Anda
}

model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String
  nim       String?
  nomorVa   String?
  status    String?
  posisi    String?
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
